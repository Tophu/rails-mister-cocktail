<div class="form-page pt-3">
  <div class="form-div container pt-3">
    <h1>Edit Cocktail</h1>

    <%= simple_form_for(@cocktail) do |f| %>

      <div class="form-inputs">
        <%= f.input :name %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-success" %> <%= link_to 'Back', cocktails_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
